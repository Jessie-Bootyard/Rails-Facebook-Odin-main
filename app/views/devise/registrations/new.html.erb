<div class="signup_can">

    <div class="registrations_new">

      <div class="signup_can_wrap">
        <h1>Sign Up</h1>
        <p>It's quick and easy.</p>
    </div>


      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

          <div class="name">
            <div class="fname">
              <%= f.text_field :first_name, autofocus: true, autocomplete: "First", placeholder: 'First name' %>
            </div>
            <div class="lname">
              <%= f.text_field :last_name, autofocus: true, autocomplete: "Last", placeholder: 'Last name' %>
            </div>
          </div>

          <div class="field email_regist">
            <%= f.email_field :email, autocomplete: "email", placeholder: 'Email or phone number' %>
          </div>

          <div class="password">
            <div class="field password_regist">
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password ( #{@minimum_password_length} characters minimum )" %>
            </div>
            <div class="field confirm_regist">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm password' %>
            </div>
          </div>
          <p class="conditions">People who use our service may have uploaded your contact information to Facebook.</p>
          <p class="conditions"> By clicking Sign Up, you agree to our Terms, Data Policy and Cookies Policy. You may receive SMS Notifications from us and can opt out any time. </p>

          <div class="signup_button">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>


          <div class="signup_button">
            <%= link_to 'Already have an account', new_user_session_path %>
          </div>`
  </div>
</div>






